<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Games</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background: url('path/to/cyberpunk-image.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #343a40;
            padding: 20px;
        }

        h1 {
            color: #dc3545;
        }

        .navbar {
            background-color: rgba(248, 249, 250, 0.8);
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #343a40 !important;
        }

        .navbar-toggler-icon {
            background-color: #343a40;
        }

        .form-control {
            background-color: #ced4da;
        }

        .btn-outline-success {
            border-color: #dc3545;
            color: #dc3545;
        }

        .btn-outline-success:hover {
            background-color: #dc3545;
            color: #fff;
        }

        .game-container {
            margin-bottom: 20px;
            cursor: pointer;
            transition: transform 0.3s ease-in-out;
        }

        .game-container:hover {
            transform: scale(1.1);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="color: #343a40;">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#" style="color: #343a40;">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="color: #343a40;">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false" style="color: #343a40;">
                            Dropdown
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" style="color: #343a40;">Action</a></li>
                            <li><a class="dropdown-item" href="#" style="color: #343a40;">Another action</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" style="color: #343a40;">Something else here</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true" style="color: #343a40;">Disabled</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <h1>Welcome to the Games Page!</h1>

    <% games.forEach(game=> { %>
    <div class="game-container" onclick="window.location.href='/games/<%= game.id %>'">
        <h2>
            <%= game.title %>
        </h2>
        <img src="<%= game.imageURL %>" alt="<%= game.title %> Image" style="max-width: 300px;" class="mx-auto">
        <p>Price: <%= findGamePrice(game.title) %></p>
    </div>
    <% }); %>

    <form action="/logout" method="post">
        <button type="submit">Logout</button>
    </form>

    <a href="/sell">Sell Your Game</a>

