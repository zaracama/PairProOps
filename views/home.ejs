    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <style>
      .carousel-inner {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1); /* Adjust the shadow values as needed */
        border-radius: 10px;
      }

      .carousel-inner img {
        object-fit: fill;
        width: 100%;
        height: 410px; /* Adjust the height as needed */
        border-radius: 10px;
      }

      .carousel-item {
        transition: transform 2s ease;
        opacity: 0.5s ease-out;
      }

      .card {
        margin-bottom: 20px; /* Add margin for separation between cards */
      }

      .card-img-top {
        object-fit: cover; /* Use 'cover' for better image aspect ratio */
        width: 100%;
        height: 200px; /* Adjust the height as needed */
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
      }

      .card .rounded-circle {
        width: 250px; /* Adjust the size of the circular image */
        height: 250px; /* Adjust the size of the circular image */
        border-radius: 50%; /* Make the image circular */
        object-fit: cover; /* Ensure the image covers the circle without stretching */
        position: absolute;
        top: 10px;
        left: 10px;
      }

      .card-body {
        margin-top: 80px; /* Adjust the margin to accommodate the circular image */
        background-color: #f0f0f0; /* Change to the desired gray color */
      }

      /* Footer Styles */
      .footer {
        background-color: #f0f0f0; /* Background color for the footer */
        padding: 40px 0; /* Adjust padding as needed */
        margin-top: 40px; /* Adjust margin as needed */
      }

      .footer a {
        color: #333; /* Link color */
        text-decoration: none;
      }

      .footer a:hover {
        color: #dc3545; /* Link color on hover */
      }

      .footer h3 {
        color: #333; /* Heading color */
      }

      .footer ul {
        list-style: none;
        padding: 0;
      }

      .footer .copy {
        color: #555; /* Text color */
      }

      .footer .sosmed a {
        font-size: 24px;
        margin-right: 10px;
        color: #333; /* Social media icon color */
      }

      .footer .sosmed a:hover {
        color: #dc3545; /* Social media icon color on hover */
      }
    </style>
    <title>Document</title>
  </head>
